/* 页面容器 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

/* 触发按钮 */
.trigger-btn {
  padding: 30rpx 80rpx;
  font-size: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 全屏浮层 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

/* 浮层关闭时的渐隐动画 */
.overlay.closing {
  animation: fadeOut 0.3s ease forwards;
}

/* 浮层淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 浮层淡出动画 */
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

/* 浮层内容容器 */
.overlay-content {
  display: flex;
  align-items: center;
  justify-content: center;
  animation: slideUp 0.3s ease;
}

/* 浮层内容关闭时的滑出动画 */
.overlay-content.closing {
  animation: slideDown 0.3s ease forwards;
}

/* 浮层内容滑入动画 */
@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 浮层内容滑出动画 */
@keyframes slideDown {
  from {
    transform: translateY(0);
    opacity: 1;
  }
  to {
    transform: translateY(100rpx);
    opacity: 0;
  }
}

/* 渲染槽位 */
.render-slot {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 卡片区域 */
.card-area {
  transform-style: preserve-3d;
  perspective: 1000px;
  transition: transform 0.2s ease-out;
  will-change: transform;
}

/* 卡片翻转动画 */
.card-area.flipping {
  animation: flipCard 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

/* 3D翻卡动画 */
@keyframes flipCard {
  0% {
    transform: rotateY(0deg) scale(1);
  }
  100% {
    transform: rotateY(360deg) scale(1);
  }
}

/* 卡片样式 */
.card {
  width: 250rpx;
  height: 250rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

/* 卡片文本 */
.card-text {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: bold;
}
