<!--
  小程序版 EffectCards 实现
  使用 movable-area + movable-view 或纯手势控制实现卡片堆叠效果
-->
<view class="container">
  <view class="cards-wrapper">
    <!-- 卡片容器 -->
    <view
      class="card-item {{index === currentIndex ? 'active' : ''}}"
      wx:for="{{cards}}"
      wx:key="id"
      style="{{item.style}}"
      catchtouchstart="onTouchStart"
      catchtouchmove="onTouchMove"
      catchtouchend="onTouchEnd"
      data-index="{{index}}"
    >
      <view class="card-content" style="background-color: {{item.backgroundColor}}">
        <text class="card-text">{{item.cardContent}}</text>
      </view>
      <!-- 卡片阴影 -->
      <view class="card-shadow" style="{{item.shadowStyle}}"></view>
    </view>
  </view>

  <view class="info">
    <text>当前卡片: {{currentIndex + 1}} / {{cards.length}}</text>
  </view>
</view>
