/* 小程序版 EffectCards 样式 */

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
}

.cards-wrapper {
  position: relative;
  width: 300rpx;
  height: 400rpx;
  perspective: 1000px;
  transform-style: preserve-3d;
}

.card-item {
  position: absolute;
  width: 300rpx;
  height: 400rpx;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -200rpx;
  transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform-origin: center center;
  will-change: transform;
}

.card-item.active {
  z-index: 100;
  transition: none;
}

.card-content {
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.card-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.card-shadow {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
  background: rgba(0, 0, 0, 0.5);
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.info {
  margin-top: 100rpx;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.info text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
