/* 增强版 EffectCards 样式 */

.container {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-sizing: border-box;
}

/* 配置面板 */
.config-panel {
  width: 90%;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.config-item {
  margin-bottom: 20rpx;
}

.config-item:last-child {
  margin-bottom: 0;
}

.config-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

slider {
  width: 100%;
}

/* 卡片容器 */
.cards-wrapper {
  position: relative;
  width: 320rpx;
  height: 440rpx;
  margin: 60rpx 0;
  perspective: 1200px;
  transform-style: preserve-3d;
}

.card-item {
  position: absolute;
  width: 320rpx;
  height: 440rpx;
  left: 50%;
  top: 50%;
  margin-left: -160rpx;
  margin-top: -220rpx;
  transition: transform 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform-origin: center bottom;
  will-change: transform;
  cursor: pointer;
}

.card-item.active {
  z-index: 100;
  transition: none;
}

.card-content {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  position: relative;
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.card-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.card-description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  line-height: 1.6;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
}

.card-number {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.card-shadow {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  pointer-events: none;
  transition: opacity 0.3s ease;
}

/* 操作按钮 */
.controls {
  display: flex;
  gap: 20rpx;
  margin: 40rpx 0 20rpx;
}

.control-btn {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  font-weight: 500;
}

.control-btn:active {
  transform: scale(0.95);
}

.control-btn[disabled] {
  opacity: 0.4;
}

.control-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 指示器 */
.indicators {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
}

.indicator-dot.active {
  width: 40rpx;
  border-radius: 8rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}
